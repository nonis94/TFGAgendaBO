<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:id="@+id/image"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_description"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="Canada"
        android:textSize="20sp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iniciDate"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="2018-05-13"
        android:textSize="20sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/horaInici"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="13:20"
        android:textSize="20sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/dataFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="2018-05-14"
        android:textSize="20sp"
        android:textColor="#000"
        />
    <TextView
        android:id="@+id/horaFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="23:30"
        android:textSize="20sp"
        android:textColor="#000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomParticipantss"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="zenon@gmail.com , nonis@gmail.com"
        android:textSize="20sp"
        android:textColor="#000"
        />
    <Button
        android:id="@+id/button_location"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/colorTextHint"
        android:text="Location" />
    <Button
        android:id="@+id/button_remove_event"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/colorTextHint"
        android:text="Remove event" />
    <Button
        android:id="@+id/button_update_event"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:background="@color/colorTextHint"
        android:text="Update event" />

</LinearLayout>